#--------------------------------------------------------------------------------
#------------------------------------ Color -------------------------------------
#--------------------------------------------------------------------------------
alias ip="ip -color=auto"
alias fd="fd --color never"
alias grep="grep -i --color=auto"



#--------------------------------------------------------------------------------
#---------------------------------- Brightness ----------------------------------
#--------------------------------------------------------------------------------
alias day="redshift -x"
alias dusk="redshift -x; redshift -O 4000k"
alias night="redshift -x; redshift -O 3000k"
alias brilho="xrandr --output LVDS-1 --brightness"



#--------------------------------------------------------------------------------
#----------------------------------- Commands -----------------------------------
#--------------------------------------------------------------------------------
alias yeet="paru -Rns"
alias fetch="fastfetch"
alias hist="history | grep -E"
alias install="sudo pacman -S"
alias refresh="source ~/.bashrc"
alias uninstall="sudo pacman -Rns"
alias calendar="cal --color=always -y"
alias merge="xrdb -merge ~/.Xresources"
alias update="paru -Syyu && sudo flatpak update -y"
alias bgm="mpv http://www.hbr1.com/playlist/trance.ogg.m3u"
alias rmexif="exiftool -recurse -overwrite_original -all= ."



#--------------------------------------------------------------------------------
#------------------------------------ Editors -----------------------------------
#--------------------------------------------------------------------------------
ed="nvim" 
alias nv="nvim"
alias hx="helix"



#--------------------------------------------------------------------------------
#------------------------------------- eza --------------------------------------
#--------------------------------------------------------------------------------
alias tree="eza -T"
alias l.='eza -a -s extension | grep -E "^\."'
alias ls="eza -s extension --group-directories-first"
alias la="eza -a -s extension --group-directories-first"
alias ll="eza -l -s extension --group-directories-first"
 
 
 
#--------------------------------------------------------------------------------
#------------------------------------ Files -------------------------------------
#--------------------------------------------------------------------------------
alias dots="cd; config ls-tree -r main --name-only; cd -"
alias config='/usr/bin/git --git-dir=$HOME/.dots/ --work-tree=$HOME'
alias bookmarks="$ed ~/Documentos/formats/text/txt/lists/bookmarks.txt"



#--------------------------------------------------------------------------------
#------------------------------------- Git --------------------------------------
#--------------------------------------------------------------------------------
alias ga='git add'
alias gl='git log'
alias grm='git rm'
alias gd='git diff'
alias gg='git grep'
alias gb='git branch'
alias gc='git commit'
alias gk='gitk --all'
alias gr='git rebase'
alias gs='git status'
alias gco='git checkout'
alias gcp='git cherry-pick'
alias gsb='git show-branch'
alias gri='git rebase --interactive'



#--------------------------------------------------------------------------------
#------------------------------ Privileged Access -------------------------------
#--------------------------------------------------------------------------------
if (( UID != 0)); then
	alias svim='sudoedit'
fi



#--------------------------------------------------------------------------------
#------------------------------- Safety features --------------------------------
#--------------------------------------------------------------------------------
alias cp='cp -i'
alias ln='ln -i'
alias mv='mv -i'
alias rm='rm -I'
alias chgrp='chgrp --preserve-root'
alias chmod='chmod --preserve-root'
alias chown='chown --preserve-root'



#--------------------------------------------------------------------------------
#--------------------------------- Substitution ---------------------------------
#--------------------------------------------------------------------------------
alias cat="bat"
alias df="df -h"
alias vim="nvim --clean"
alias pcmanfm="pcmanfm . &"
alias rstudio="rstudio-daily-bin"



#--------------------------------------------------------------------------------
#------------------------------------ Text --------------------------------------
#--------------------------------------------------------------------------------
alias money="$ed ~/Documentos/formats/text/md/money.md"
alias todo="$ed ~/Documentos/formats/text/txt/lists/todo.md"
alias notodo="$ed ~/Documentos/formats/text/txt/lists/notodo.md"

